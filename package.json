{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "npm run build && jest",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "dev:editor:ui": "cd packages/editor && cross-env NODE_ENV=development webpack-dev-server --config ./webpack.config.js",
    "dev:editor:server": "cd packages/editor && cross-env NODE_ENV=development ts-node --project ./tsconfig.server.json ./server/index.ts",
    "buildmiddleware": "cd packages/middleware && rm -rf lib && tsc",
    "buildmocker": "cd packages/mocker && rm -rf lib && tsc",
    "buildutil": "cd packages/util && tsc",
    "build:editor:ui": "cd packages/editor && cross-env NODE_ENV=production webpack --config ./webpack.config.js",
    "build:editor:server": "cd packages/editor/server && cross-env NODE_ENV=production tsc --project ../tsconfig.server.json",
    "build": "npm run buildmocker && npm run buildutil",
    "demo:basic": "npm run build && cd packages/mocker/examples/basic && httpmock",
    "demo:webpack": "npm run build && cd packages/mocker/examples/webpack && npm start",
    "demo:command": "npm run build && cd packages/mocker/examples/commander && (npm run serve | npm run mock)"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/plugin-transform-function-name": "^7.4.4",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.11",
    "@types/mockjs": "^1.0.2",
    "@types/node": "^11.13.8",
    "babel-jest": "^24.7.1",
    "babel-loader": "^8.0.6",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.1.0",
    "jest": "^24.7.1",
    "lerna": "^3.13.4",
    "lint-staged": "^8.1.5",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.0.3",
    "redux": "^4.0.1",
    "style-loader": "^0.23.1",
    "styled-components": "^4.2.1",
    "ts-node": "^8.2.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.4.1"
  },
  "lint-staged": {
    "packages/**/*.ts": []
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "node ./scripts/verifyCommitMsg.js"
    }
  },
  "engines": {
    "node": ">= 8.9.1"
  },
  "dependencies": {
    "mockjs": "^1.0.1-beta3"
  }
}
