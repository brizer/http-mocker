{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "npm run build && jest",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "buildmiddleware": "cd packages/middleware && rm -rf lib && tsc",
    "buildmocker": "cd packages/mocker && rm -rf lib && tsc",
    "buildutil": "cd packages/util && tsc",
    "build": "npm run buildmocker && npm run buildutil",
    "demo:basic":"npm run build && cd packages/mocker/examples/basic && httpmock",
    "demo:webpack":"npm run build && cd packages/mocker/examples/webpack && npm start",
    "demo:command":"npm run build && cd packages/mocker/examples/commander && (npm run serve | npm run mock)"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/plugin-transform-function-name": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.8",
    "babel-jest": "^24.7.1",
    "husky": "^2.1.0",
    "jest": "^24.7.1",
    "lerna": "^3.13.4",
    "lint-staged": "^8.1.5",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  },
  "lint-staged": {
    "packages/**/*.ts": [
      
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "node ./scripts/verifyCommitMsg.js"
    }
  },
  "engines": {
    "node": ">= 8.9.1"
  }
}
